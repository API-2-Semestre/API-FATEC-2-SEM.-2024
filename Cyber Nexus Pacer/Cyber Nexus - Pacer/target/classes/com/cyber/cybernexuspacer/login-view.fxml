    <PasswordField fx:id="usuarioSenha" layoutX="311.0" layoutY="331.0" promptText="Senha" />
    <Button fx:id="btnEntrar" layoutX="312.0" layoutY="373.0" mnemonicParsing="false" onAction="#onClickbtnEntrar" prefHeight="25.0" prefWidth="148.0" style="-fx-background-color: lightblue; -fx-alignment: center;" styleClass="-fx-alignment" text="Entrar" textAlignment="CENTER" textFill="#fffffb" textOverrun="CENTER_ELLIPSIS">
        <font>
          <Font name="Arial Black" size="12.0" />
        </font>
    </Button>
   <TextField fx:id="usuarioLogin" layoutX="311.0" layoutY="280.0" promptText="Usuário" />
   <Label fx:id="lblUsuarioESenhaInvalidos" layoutX="320.0" layoutY="401.0" textFill="#f2041c" />
</AnchorPane>
