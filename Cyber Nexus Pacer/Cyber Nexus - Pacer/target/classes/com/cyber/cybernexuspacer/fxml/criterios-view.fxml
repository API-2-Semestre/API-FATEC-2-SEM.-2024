                      <VBox fx:id="sprintContainer" spacing="10.0">
                    <!-- As caixinhas de entrada de data serão adicionadas aqui -->
                </VBox>
                  </children>
              </VBox>
            </children>
        </Pane>


        <!-- Caixa de entrada do Critério -->
        <AnchorPane layoutX="280.0" prefHeight="120.0" prefWidth="470.0" AnchorPane.leftAnchor="280.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="110.0">
            <children>
                <TextField fx:id="tituloCritério" prefHeight="25.0" prefWidth="470.0" promptText="Título do Critério" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
